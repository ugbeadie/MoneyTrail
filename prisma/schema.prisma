model Transaction {
  id          String   @id @default(cuid())
  type        String
  amount      Float
  category    String
  description String?
  imageUrl    String?
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("transactions")
}
